{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ask-ai",
  "title": "Ask AI",
  "description": "OpenAI API を利用したチャットインターフェース。ランチャーから離れることなく AI との対話を完結させます。",
  "icon": "command-icon.png",
  "author": "ryo",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "ask-ai",
      "title": "Ask AI",
      "description": "AI とチャットで会話する",
      "mode": "view"
    },
    {
      "name": "ask-ai-new",
      "title": "Ask AI (New)",
      "description": "新しい会話で AI とチャットを始める",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "password",
      "required": true,
      "title": "OpenAI API Key",
      "description": "OpenAI の API キー",
      "placeholder": "sk-..."
    },
    {
      "name": "model",
      "type": "dropdown",
      "required": false,
      "title": "Model",
      "description": "使用する GPT モデル",
      "default": "gpt-4.1-nano",
      "data": [
        {
          "title": "GPT-4.1 nano",
          "value": "gpt-4.1-nano"
        },
        {
          "title": "GPT-4.1 mini",
          "value": "gpt-4.1-mini"
        },
        {
          "title": "GPT-4.1",
          "value": "gpt-4.1"
        },
        {
          "title": "GPT-5 nano",
          "value": "gpt-5-nano"
        },
        {
          "title": "GPT-5 mini",
          "value": "gpt-5-mini"
        },
        {
          "title": "GPT-5.2",
          "value": "gpt-5.2"
        }
      ]
    },
    {
      "name": "reasoningEffort",
      "type": "dropdown",
      "required": false,
      "title": "Reasoning Effort（推論モデル向け）",
      "description": "GPT-5 系モデルの推論レベル（4.1 系では無視されます）",
      "default": "medium",
      "data": [
        {
          "title": "Low",
          "value": "low"
        },
        {
          "title": "Medium",
          "value": "medium"
        },
        {
          "title": "High",
          "value": "high"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.2",
    "openai": "^4.82.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "22.13.1",
    "@types/react": "19.0.8",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"Error: no publish\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
